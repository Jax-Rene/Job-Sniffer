<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{MM-dd HH:mm:ss} [%-5level] %l - %msg%n}{FATAL=red, ERROR=red}"/>
        </Console>
    </appenders>
    <loggers>
        <root level="ERROR">
            <appender-ref ref="Console"/>
        </root>
    </loggers>
</configuration>